{
  "compilerOptions": {
      "noImplicitAny": true,
      "module": "ES2015",
      "target": "ES2015",
      "jsx": "react",
      "allowJs": true,
      "moduleResolution": "node",
      "types": [
        "jest"
      ],

      // Import non-ES modules as default imports.
      "esModuleInterop": true,

      "baseUrl": ".",
      "paths": {
          "@helpers/*": ["../../helpers/*"]
      }
  },
  "include": [
    "../../helpers/*",
    "../../globals/*",
    "../../typescript-transformer/index.d.ts",
    "./**/*"
  ],
  "exclude": [
      "./*.json",
      "**/*.json"
  ]
}